<%- include("./partials/head") -%>

<div class="relative bg-white px-6 pt-10 pb-8 shadow ring-1 ring-slate-900/5 sm:mx-auto sm:max-w-lg sm:rounded-lg sm:px-10">
    <div class="mt-2 mx-auto max-w-md">

        <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-slate-900">One Shot Unfollow</h2>

        <p class="mt-2 text-center text-sm text-slate-600">Clear your instagram following in one shot</p>

        <form class="mt-2 space-y-4" action="/ig/two-factor" method="POST">
            <div>
                <label for="security-code" class="block text-sm font-medium leading-6 text-slate-900">Security code</label>
                <div class="mt-2">
                    <input id="security-code" name="otp" type="text" required class="block w-full rounded-lg border-0 py-1.5 text-slate-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6">
                </div>
            </div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-lg bg-blue-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">Confirm</button>
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer") -%>
